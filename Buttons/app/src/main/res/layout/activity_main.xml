<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textExample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="61dp"
        android:background="@color/design_default_color_error"
        android:gravity="center"
        android:text="Hello World to the human!"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/doMagic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myButton" />

    <Button
        android:id="@+id/doMagic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="300dp"
        android:background="@drawable/button_shape"
        android:backgroundTint="@null"
        android:clickable="false"
        android:text="do your magic"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textExample"
        app:layout_constraintTop_toBottomOf="@+id/textExample" />

    <Button
        android:id="@+id/myButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="135dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="65dp"
        android:text="button 2"
        app:layout_constraintBottom_toTopOf="@+id/textExample"
        app:layout_constraintEnd_toEndOf="@+id/textExample"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>